{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/_disabled", "src/controllers/paymentController.ts", "src/services/paymentService.ts", "src/routes/paymentRoutes.ts", "src/routes/purchaseRoutes.ts", "src/controllers/purchaseController.ts", "src/voice-agent/voice/openaiRealtime.ts"]
}
